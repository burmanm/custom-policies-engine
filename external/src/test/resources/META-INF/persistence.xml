<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="infinispan-engine">
        <!-- This class is required to allow store metadata -->
        <class>com.redhat.cloud.policies.infinispan.persistence.impl.MetadataEntity</class>
        <!-- These are our own classes -->
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnAction</class>
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnActionPlugin</class> <!-- ActionPlugins don't need any persistence in reality .. -->
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnActionDefinition</class>
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnCondition</class>
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnDampening</class>
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnEvent</class>
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnTrigger</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://192.168.1.139:5432/policies"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="policies"/>
            <property name="hibernate.connection.password" value="policies"/>
            <!-- <property name="hibernate.dialect" value="${hibernate.dialect}" /> --> <!-- dialect is automatically determined by hibernate, uncomment to force the dialect -->
            <property name="hibernate.jdbc.batch_size" value="20" />
            <property name="hibernate.jdbc.fetch_size" value="20" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false" /> <!-- set to true if you'd like to see what's going on -->
            <property name="hibernate.connection.autocommit" value="false" />
        </properties>
    </persistence-unit>
</persistence>
