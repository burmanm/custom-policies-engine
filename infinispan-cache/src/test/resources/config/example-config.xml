<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:10.1 http://www.infinispan.org/schemas/infinispan-config-10.1.xsd"
        xmlns="urn:infinispan:config:10.1">

    <cache-container name="hawkular-alerts">
        <local-cache name="testCache">
            <persistence passivation="false">
                <db-store xmlns="urn:infinispan:config:store:db:10.1"
                          shared="false" preload="true" segmented="false" persistence-unit="infinispan-engine">
                    <entities>
                        <entity>com.redhat.cloud.policies.infinispan.persistence.KeyOne</entity>
                        <entity>com.redhat.cloud.policies.infinispan.persistence.KeyTwo</entity>
                    </entities>
                    <property name="key-transformer">com.redhat.cloud.policies.infinispan.persistence.TestKeyTransformer</property>
                </db-store>
            </persistence>
        </local-cache>
    </cache-container>
</infinispan>