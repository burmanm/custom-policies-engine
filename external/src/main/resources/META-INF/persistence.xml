<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="infinispan-engine">
        <!-- This class is required to allow store metadata -->
        <class>com.redhat.cloud.policies.infinispan.persistence.impl.MetadataEntity</class>
<!--        <class>MetadataEntity</class>-->
<!--        &lt;!&ndash; These are our own classes &ndash;&gt;-->
        <class>org.hawkular.alerts.engine.impl.ispn.model.IspnActionPlugin</class> <!-- ActionPlugins don't need any persistence in reality .. we'll regen on every restart -->
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://192.168.1.139:5432/policies"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="policies"/>
            <property name="hibernate.connection.password" value="policies"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect" />
            <property name="hibernate.jdbc.batch_size" value="20" />
            <property name="hibernate.jdbc.fetch_size" value="20" />
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- TODO Should be update and this should be in external? -->
            <property name="hibernate.show_sql" value="false" /> <!-- set to true if you'd like to see what's going on -->
            <property name="hibernate.connection.autocommit" value="false" />
        </properties>
    </persistence-unit>
</persistence>
